{
  "meta": {
    "name": "Golden-Edge Mentorship Landing",
    "description": "Design-system profile distilled from the provided screenshot so an AI assistant (e.g. Cursor) can consistently recreate pages in the same visual language.",
    "version": "1.0.0"
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "xxl": "1536px"
  },

  "colors": {
    "primary":   "#CF8F36",         
    "primary-dark": "#B3772B",
    "primary-light": "#E4B654",

    "background-dark": "#030302",  
    "background-light": "#C4B096", 

    "surface-card": "#33271A",     

    "text-high":  "#FFFFFF",       
    "text-muted": "#C4B096",       

    "gradient-gold": [
      "#E4B654",
      "#CFA041"
    ],

    "overlay-shadow": "rgba(0,0,0,0.4)"
  },

  "typography": {
    "font-families": {
      "heading": "'Playfair Display', serif",
      "body": "'Inter', sans-serif"
    },

    "heading": {
      "font-weight": 700,
      "letter-spacing": "0.02em",
      "text-transform": "uppercase",
      "line-height": 1.15,
      "scale": {
        "h1": "clamp(2.25rem, 5vw, 3.75rem)",
        "h2": "clamp(1.75rem, 4vw, 2.75rem)",
        "h3": "clamp(1.5rem, 3vw, 2.25rem)"
      }
    },

    "body": {
      "font-weight": 400,
      "font-size": "1rem",
      "line-height": 1.6
    },

    "button": {
      "font-family": "'Inter', sans-serif",
      "font-weight": 600,
      "letter-spacing": "0.04em",
      "text-transform": "uppercase"
    }
  },

  "spacing": {
    "scale": [0, 4, 8, 16, 24, 32, 48, 64],   
    "section-padding-y": "6rem",
    "container-max-width": "1200px",
    "grid-gap": "2rem",
    "border-radius": "0.5rem"
  },

  "layout": {
    "hero": {
      "type": "two-column",
      "order": ["copy", "image"],
      "copy-alignment": "left",
      "background": "background-dark",
      "full-height": false,
      "image-overlay": {
        "type": "gradient",
        "direction": "to right",
        "colors": [
          "rgba(3,3,2,0.9)",
          "rgba(3,3,2,0.2)"
        ]
      }
    },

    "section-alternation": [
      "background-dark",
      "gradient-gold"
    ],

    "cards-grid": {
      "columns": {
        "sm": 1,
        "md": 2,
        "lg": 3
      },
      "card-min-height": "280px"
    },

    "cta-banner": {
      "background": "gradient-gold",
      "alignment": "center"
    }
  },

  "components": {
    "button": {
      "base": {
        "padding": "0.75rem 2.5rem",
        "border-radius": "0.5rem",
        "transition": "all 150ms ease-in-out",
        "shadow": "0 4px 12px rgba(0,0,0,0.4)"
      },

      "variants": {
        "primary": {
          "background": "primary",
          "text-color": "background-dark",
          "hover": {
            "transform": "translateY(-2px)",
            "shadow": "0 6px 16px rgba(0,0,0,0.4)"
          }
        },

        "ghost": {
          "background": "transparent",
          "border": "2px solid currentColor",
          "text-color": "primary",
          "hover": {
            "background": "rgba(255,255,255,0.05)"
          }
        }
      }
    },

    "card": {
      "background": "surface-card",
      "text-color": "text-high",
      "border-radius": "0.5rem",
      "padding": "2rem",
      "shadow": "0 4px 12px rgba(0,0,0,0.3)"
    },

    "step-badge": {
      "shape": "square",
      "size": "3rem",
      "background": "gradient-gold",
      "text-color": "background-dark",
      "font-weight": 700
    }
  },

  "effects": {
    "elevation": {
      "level-1": "0 2px 6px rgba(0,0,0,0.3)",
      "level-2": "0 4px 12px rgba(0,0,0,0.4)"
    },

    "transition-fast": "all 150ms ease-in-out"
  },

  "imagery": {
    "tone": "warm, high-contrast",
    "color-grading": "golden overlay on portraits & lifestyle shots",
    "subject-types": [
      "professional portraits with dramatic side lighting",
      "abstract silhouettes / motion scenes",
      "mock-ups of mobile phones with golden reflections"
    ],
    "corner-style": "soft (border-radius matches 0.5rem token)",
    "preferred-aspect-ratios": ["3:4", "16:9"]
  }
}
